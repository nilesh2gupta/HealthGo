<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileForm">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/top_background_blue"/>
                <ImageView
                    android:id="@+id/imgcamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:translationY="170dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Change profile photo"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/info_backgrng">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/info_backgrng"
                        android:layout_height="450dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Name:"/>
                            <EditText
                                android:id="@+id/name"
                                android:layout_width="300dp"
                                android:hint="Enter name"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Address:"/>
                            <EditText
                                android:id="@+id/address"
                                android:layout_width="300dp"
                                android:hint="Enter Address"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="City:"/>
                            <EditText
                                android:id="@+id/city"
                                android:layout_width="300dp"
                                android:hint="Enter city"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="State:"/>
                            <EditText
                                android:id="@+id/state"
                                android:layout_width="300dp"
                                android:hint="Enter state"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Country:"/>
                            <EditText
                                android:id="@+id/country"
                                android:layout_width="300dp"
                                android:hint="Enter country"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Mobile:"/>
                            <EditText
                                android:id="@+id/mobile"
                                android:layout_width="300dp"
                                android:hint="Enter mobile"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Age:"/>
                            <EditText
                                android:id="@+id/age"
                                android:layout_width="300dp"
                                android:hint="Enter age"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Blood Group:"/>
                            <EditText
                                android:id="@+id/blood_group"
                                android:layout_width="300dp"
                                android:hint="Enter blood group"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:translationX="20dp"
                                android:textStyle="bold"
                                android:text="Gender:"/>
                            <EditText
                                android:id="@+id/gender"
                                android:layout_width="300dp"
                                android:hint="Enter your gender"
                                android:layout_height="wrap_content"
                                android:translationX="20dp"
                                />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/apply_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply Change"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/black"
        android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/selector_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="34dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:src="@drawable/baseline_access_alarm_24"

            android:textSize="20dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEt alarm"
            android:translationX="100dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_alarm_add_24"
            android:textSize="20dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancel_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel alarm"
            android:translationX="192dp"
            android:src="@drawable/baseline_alarm_off_24"


            android:textSize="20dp"
            />


    </LinearLayout>

</LinearLayout>